<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="1.7976931348623157E308" 
      maxHeight="1.7976931348623157E308" 
      minWidth="-Infinity"
      minHeight="-Infinity" 
      prefWidth="540" 
      spacing="20.0" 
      alignment="BOTTOM_RIGHT" 
      xmlns="http://javafx.com/javafx/8.0.65" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.speedment.internal.ui.controller.MailPromptController">
    
    <children>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="header" text="Welcome to The Community!" />
        <Label maxWidth="1.7976931348623157E308" text="Please enter your email address:" />
        
        <TextField fx:id="email" promptText="Email">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
        </TextField>
        
        <TitledPane expanded="false" text="Terms and Conditions" maxHeight="1.7976931348623157E308" styleClass="termsContainer" VBox.vgrow="ALWAYS">
            <content>
                <TextArea fx:id="terms" editable="false" minHeight="100.0" maxHeight="1.7976931348623157E308" prefWidth="200.0" wrapText="true" />
            </content>
        </TitledPane>
        
        <Button fx:id="okey" alignment="CENTER" defaultButton="true" disable="true" mnemonicParsing="false" text="Okey, I accept!">
            <padding>
                <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
            </padding>
        </Button>
    </children>
    
    <padding>
        <Insets bottom="48.0" left="48.0" right="48.0" top="48.0" />
    </padding>
</VBox>
