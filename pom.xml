    <!-- Project Metadata -->
    <name>Speedment</name>
    <description>
        Read and modify your database using standard Java 8-streams and 
        generated entity classes.
    </description>
    
    <!-- Modules -->
    <modules>
        <module>common-parent</module>
        <module>runtime-parent</module>
        <module>generator-parent</module>
