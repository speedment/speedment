<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.Cursor?>

<Label fx:id="notification" 
       styleClass="notification"
       graphicTextGap="8" 
       onMousePressed="#close"
       prefWidth="320.0" 
       text="Testing" 
       wrapText="true" 
       xmlns:fx="http://javafx.com/fxml/1" 
       xmlns="http://javafx.com/javafx/8.0.65" 
       fx:controller="com.speedment.runtime.internal.ui.controller.NotificationController">
    <effect>
        <DropShadow color="#00000080" height="8.0" offsetY="1.0" radius="3.5" width="8.0" />
    </effect>
    <cursor>
        <Cursor fx:constant="HAND" />
    </cursor>
</Label>